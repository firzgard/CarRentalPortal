@model CRP.Models.ViewModels.VehicleGroupViewModel

@{
    ViewBag.Title = "CreatePopup";
    Layout = "";
}

<div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header modal-header-popup">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Tạo nhóm mới</h4>
        </div>
        <form action="/api/vehicleGroups" method="post">
            @Html.AntiForgeryToken()
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <label>Tên nhóm <span style="color: red">*</span></label>
                        @Html.TextBoxFor(q => q.Name, new { @id="group-name", @class = "form-control required input-lg", required = "true" })
                        
                    </div>
                </div>
                <hr>
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#with-driver">Giá thuê bao gồm tài xế</a></li>
                        <li class=""><a data-toggle="tab" href="#without-driver"> Giá thuê tự lái</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="with-driver" class="tab-pane active">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Đặt cọc <span style="color: red">*</span></label>
                                        <div class="input-group m-b boxForm text-center">
                                            @Html.HiddenFor(q => q.PriceGroup1.DepositPercentage, new { @id = "deposit" })
                                            <input type="number" id="depositDisplay" class="form-control" /> <span class="input-group-addon">%</span>
                                        </div>
                                        <label>Kỳ hạn thuê tối đa</label>
                                        <div class="input-group m-b boxForm text-center">
                                            @Html.TextBoxFor(q => q.PriceGroup1.MaxRentalPeriod, new { @id = "max-rent", @type = "number", @class = "form-control" }) <span class="input-group-addon">ngày</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Giá theo ngày <span style="color: red">*</span></label>
                                        <div class="input-group m-b boxForm text-center">
                                            @Html.TextBoxFor(q => q.PriceGroup1.PerDayPrice, new { @id = "per-day-price", @type = "number", @class = "form-control" }) <span class="input-group-addon">&#8363;</span>
                                        </div>
                                        <label>Số Km tối đa một ngày</label>
                                        <div class="input-group m-b boxForm text-center">
                                            @Html.TextBoxFor(q => q.PriceGroup1.MaxDistancePerDay, new { @id = "max-distance-day", @type = "number", @class = "form-control" }) <span class="input-group-addon">Km</span>
                                        </div>
                                        <label>Số tiền trả thêm</label>
                                        <div class="input-group m-b boxForm text-center">
                                            @Html.TextBoxFor(q => q.PriceGroup1.ExtraChargePerKm, new { @id = "max-km-day", @type = "number", @class = "form-control", @placeholder = "Được áp dụng khi vượt số Km quy định" }) <span class="input-group-addon">&#8363;/Km</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-10 ibox-content">
                                        <div class="pull-right">
                                            <button type="button" class="btn btn-primary btn-number plus-btn" data-type="plus">
                                                <i class="fa fa-plus"></i> Thêm hàng mới
                                            </button>
                                        </div>
                                        <label>Bảng giá theo giờ</label>
                                        <!--                        <div class="ibox ibox-content float-e-margins">-->
                                        <table class="table table-striped table-bordered table-hover " id="groupPop"></table>
                                        <!--                        </div>-->
                                    </div>
                                    <div class="col-md-5"></div>
                                </div>
                            </div>
                        </div>
                        <div id="without-driver" class="tab-pane">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Đặt cọc <span style="color: red">*</span></label>
                                        <div class="input-group m-b boxForm text-center">
                                            @Html.HiddenFor(q => q.PriceGroup.DepositPercentage, new { @id = "deposit-n" })
                                            <input type="number" id="depositDisplay" class="form-control" /> <span class="input-group-addon">%</span>
                                        </div>
                                        <label>Kỳ hạn thuê tối đa</label>
                                        <div class="input-group m-b boxForm text-center">
                                            @Html.TextBoxFor(q => q.PriceGroup.MaxRentalPeriod, new { @id = "max-rent-n", @type = "number", @class = "form-control" }) <span class="input-group-addon">ngày</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Giá theo ngày <span style="color: red">*</span></label>
                                        <div class="input-group m-b boxForm text-center">
                                            @Html.TextBoxFor(q => q.PriceGroup.PerDayPrice, new { @id = "per-day-price-n", @type = "number", @class = "form-control" }) <span class="input-group-addon">&#8363;</span>
                                        </div>
                                        <label>Số Km tối đa một ngày</label>
                                        <div class="input-group m-b boxForm text-center">
                                            @Html.TextBoxFor(q => q.PriceGroup.MaxDistancePerDay, new { @id = "max-distance-day-n", @type = "number", @class = "form-control" }) <span class="input-group-addon">Km</span>
                                        </div>
                                        <label>Số tiền trả thêm</label>
                                        <div class="input-group m-b boxForm text-center">
                                            @Html.TextBoxFor(q => q.PriceGroup.ExtraChargePerKm, new { @id = "max-km-day-n", @type = "number", @class = "form-control", @placeholder = "Được áp dụng khi vượt số Km quy định" }) <span class="input-group-addon">&#8363;/Km</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-10 ibox-content">
                                        <div class="pull-right">
                                            <button type="button" class="btn btn-primary btn-number plus-btn-n" data-type="plus">
                                                <i class="fa fa-plus"></i> Thêm hàng mới
                                            </button>
                                        </div>
                                        <label>Bảng giá theo giờ</label>
                                        <!--                        <div class="ibox ibox-content float-e-margins">-->
                                        <table class="table table-striped table-bordered table-hover " id="groupPop-n"></table>
                                        <!--                        </div>-->
                                    </div>
                                    <div class="col-md-5"></div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button id="btnCreate" class="btn btn-primary" type="button">Tạo nhóm</button>
            </div>
        </form>
    </div>
</div>
