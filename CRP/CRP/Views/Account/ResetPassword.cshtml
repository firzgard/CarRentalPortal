@model CRP.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<h2>@ViewBag.Title.</h2>
<div class="middle-box text-center loginscreen animated fadeInDown">
    <div class="margin-signup padding-signup backgroundStyle">
        <div>
            <h1 class="logo-name">CRP</h1>
        </div>
        <h3 style="color:white">Reset mật khẩu</h3>
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Reset mật khẩu.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div>


            </div>
                <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                </div>
                <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẫu mới" })
                </div>
                <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Xác nhận mật khẩu mới" })
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b" style="color:white">Reset</button>
                }
            </div>
</div>

@section PageStyle {
    @Styles.Render("~/Content/pageStyle/login.css")
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
