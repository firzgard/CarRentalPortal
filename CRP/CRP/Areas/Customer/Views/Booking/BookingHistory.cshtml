@model CRP.Models.ViewModels.BookingCommentModel
@{
    ViewBag.Title = "Booking History";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <h2>Booking History</h2>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox ibox-content float-e-margins">

        <table class="table table-striped table-bordered table-hover " id="garages" width="100%">
            <thead></thead>
            <tfoot id="multiFilter">
            <th></th>
            <!-- Garage's name filter -->
            <th>
                <div id="VehicleName" class="btn-group">
                    <button class="btn btn-primary filter-toggle">
                        <i class="fa fa-search"></i>
                    </button>
                    <div class="dropdown-menu filter-dropdown">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Group Name...">
                            <span class="input-group-btn">
                                <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                    <button class="btn btn-warning filter-remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </th>
            <!-- Max rent filter -->
            <th>
                <div id="StartTime" class="btn-group">
                    <button class="btn btn-primary filter-toggle">
                        <i class="fa fa-search"></i>
                    </button>
                    <div class="dropdown-menu filter-dropdown">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Max rental period...">
                            <span class="input-group-btn">
                                <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                    <button class="btn btn-warning filter-remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </th>
            <!-- deposit filter -->
            <th>
                <div id="EndTime" class="btn-group">
                    <button class="btn btn-primary filter-toggle">
                        <i class="fa fa-search"></i>
                    </button>
                    <div class="dropdown-menu filter-dropdown">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="deposit">
                            <span class="input-group-btn">
                                <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                    <button class="btn btn-warning filter-remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </th>
            <!-- per day price filter --
            <!-- price filter -->
            <!-- Status -->
            <th>
                <div id="Status" class="btn-group">
                    <button class="btn btn-primary filter-toggle">
                        <i class="fa fa-search"></i>
                    </button>
                    <div class="dropdown-menu filter-dropdown">
                        <button class="btn btn-primary btn-block">Filter <i class="fa fa-search"></i></button>
                        <div class="scroller">
                            <div class="input-group" id="transmissionSelector">
                                <div class="checkbox checkbox-success">
                                    <input value="true" id="sttActive" type="checkbox" />
                                    <label for="sttActive">Cancle or Done</label>
                                </div>
                                <div class="checkbox checkbox-success">
                                    <input value="false" id="sttInactive" type="checkbox" />
                                    <label for="sttInactive">During</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-warning filter-remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </th>

            <th>
                <div id="Star" class="btn-group">
                    <button class="btn btn-primary filter-toggle" aria-expanded="false">
                        <i class="fa fa-search"></i>
                    </button>
                    <button class="btn btn-warning filter-remove">
                        <i class="fa fa-times"></i>
                    </button>
                    <div class="dropdown-menu filter-dropdown last-col-filter">
                        <div class="input-group">
                            <span class="input-group-addon"><b>From</b></span>
                            <input type="number" min="0" max="5" class="from-input form-control">
                            <span class="input-group-addon"><b>To</b></span>
                            <input type="number" min="0" max="5" class="to-input form-control">
                            <span class="input-group-btn">
                                <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                </div>
            </th>
        </table>
    </div>
    <th></th>
    </tfoot>
    </table>
</div>
</div>
<div class="modal fade" id="mdModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

@{ BundleTable.Bundles.Add(new StyleBundle("~/Styles/BookingHistory")
                                          .Include("~/Content/awesome-bootstrap-checkbox.css",
                                              "~/Content/chosen.css",
                                              "~/Content/DataTables/css/dataTables.bootstrap.css",
                                              "~/Content/pageStyle/vehicleGroupManagement.css"));
}
@section Styles {
    @Styles.Render("~/Styles/BookingHistory")
}
@{ BundleTable.Bundles.Add(new ScriptBundle("~/Scripts/BookingHistory")
                                           .Include("~/Scripts/chosen.jquery.js",
                                              "~/Scripts/DataTables/jquery.dataTables.js",
                                              "~/Scripts/DataTables/dataTables.bootstrap.js",
                                              "~/Scripts/utils/generateUIElements.js",
                                              "~/Scripts/utils/generateCustomDataTablesFilters.js",
                                              "~/Scripts/pageScript/BookingHistory.js"));
}
@section Scripts {
    @Scripts.Render("~/Scripts/BookingHistory")
}
