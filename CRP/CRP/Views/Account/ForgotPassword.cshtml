@model CRP.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}
<div class="middle-box text-center loginscreen animated fadeInDown">
    <div class="margin-signup padding-signup backgroundStyle">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div>
                <h1 class="logo-name">CRP</h1>
            </div>
            <h3 style="color:white">Enter your email</h3>
                <div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b" style="color:white">Send</button>
                </div>
                <p class="m-t" style="color:white"> <small>Contact us at carrentalportal@gmail.com</small> </p>


        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@section PageStyle {
    @Styles.Render("~/Content/pageStyle/forgetPassword.css")
}
