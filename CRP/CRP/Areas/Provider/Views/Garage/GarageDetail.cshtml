@model CRP.Models.Entities.Garage
@{
    ViewBag.Title = "Garage Detail";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-md-10"><h2>Thông tin garage</h2></div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox ibox-content float-e-margins">
        <form action="#">
            <input type="hidden" value="666" id="garageID" required>
            <input type="hidden" value="true" id="isActive" required>
            <div class="row form-group">
                <div class="col-md-6">
                    <span class="display-control m-t" style="font-size: 2em; font-weight:bold;">@Html.DisplayFor(q => q.Name)</span>
                    <div class="edit-control input-group">
                        @Html.TextBoxFor(q => q.Name, new { @class = "form-control input-lg", @id = "garageName", @placeholder = "Garage Name", @style = "font-size: 2em; font-weight:bold;", required = true })
                    </div>
                </div>
                <div data-star="4.4" class="col-md-4" id="starRating"></div>
                <div class="col-md-2 pull-right">
                    <button id="edit-btn" class="display-control btn btn-block btn-success"><i class="fa fa-pencil-square-o"></i><span> Sửa thông tin</span></button>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-7">
                    <div class="display-control first-row form-group">
                        <div class="col-md-4 font-bold">Địa điểm</div>
                        <span>@Html.DisplayFor(q => q.Location.Name)</span>
                    </div>
                    <div class="edit-control form-group">
                        <label for="locationID">Địa điểm*</label>
                        <select data-placeholder="Please choose a location..." class="form-control" id="locationID" required>
                            <option value=""></option>
                            <option value="1" selected>Hồ Chí Minh</option>
                            <option value="2">Hà Nội</option>
                            <option value="3">Cà Mau</option>
                        </select>
                    </div>

                    <div class="display-control form-group">
                        <div class="col-md-4 font-bold">Địa chỉ</div>
                        <span>@Html.DisplayFor(q => q.Address)</span>
                    </div>
                    <div class="edit-control form-group">
                        <label for="address">Địa chỉ*</label>
                        <span></span>
                        <input type="text" placeholder="Address" value="" class="form-control" id="address" required>
                    </div>

                    <div class="display-control form-group">
                        <div class="col-md-4 font-bold">Email</div>
                        <span>@Html.DisplayFor(q => q.Email)</span>
                    </div>
                    <div class="edit-control form-group">
                        <label for="email">Email*</label>
                        <input type="text" placeholder="Email Address" value="" class="form-control" id="email" required>
                    </div>

                    <div class="display-control form-group">
                        <div class="col-md-4 font-bold">Số điện thoại 1</div>
                        <span>@Html.DisplayFor(q => q.Phone1)</span>
                    </div>
                    <div class="edit-control form-group">
                        <label for="phone1">Số điện thoại 1*</label>
                        <input type="text" placeholder="Primary Phone Number" value="" class="form-control" id="phone1" required>
                    </div>

                    <div class="display-control form-group">
                        <div class="col-md-4 font-bold">Số điện thoại 2</div>
                        <span>@Html.DisplayFor(q => q.Phone2)</span>
                    </div>
                    <div class="edit-control form-group">
                        <label for="phone2">Số điện thoại 2</label>
                        <input type="text" placeholder="Alternative Phone Number" value="" class="form-control" id="phone2">
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group" id="workingTime">
                        <label><h2><b>Thời gian mở cửa</b></h2></label>
                        <div class="input-group">
                            <div class="input-group-addon gray-bg">Thứ hai</div>
                            <div class="input-group-addon">Từ</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="openTimeMon">
                            <div class="input-group-addon">Đến</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="closeTimeMon">
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon gray-bg">Thứ ba</div>
                            <div class="input-group-addon">Từ</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="openTimeTue">
                            <div class="input-group-addon">Đến</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="closeTimeTue">
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon gray-bg">Thứ tư</div>
                            <div class="input-group-addon">Từ</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="openTimeWed">
                            <div class="input-group-addon">Đến</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="closeTimeWed">
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon gray-bg">Thứ năm</div>
                            <div class="input-group-addon">Từ</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="openTimeThur">
                            <div class="input-group-addon">Đến</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="closeTimeThur">
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon gray-bg">Thứ sáu</div>
                            <div class="input-group-addon">Từ</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="openTimeFri">
                            <div class="input-group-addon">Đến</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="closeTimeFri">
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon gray-bg">Thứ bảy</div>
                            <div class="input-group-addon">Từ</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="openTimeSat">
                            <div class="input-group-addon">Đến</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="closeTimeSat">
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon gray-bg">Chủ nhật</div>
                            <div class="input-group-addon">Từ</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="openTimeSun">
                            <div class="input-group-addon">Đến</div>
                            <input type="text" data-mask="99:99" value="" class="form-control" id="closeTimeSun">
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <button class="edit-control btn btn-primary pull-right">Lưu lại</button>
                <div class="btn-group">
                    <button id="activationBtn" class="btn btn-warning" data-toggle="modal" data-target="#customModal"></button>
                    <button class="btn btn-danger" data-toggle="modal" data-target="#customModal" data-action="deleteGarage">Xóa garage</button>
                </div>
            </div>
        </form>
    </div>
    <div class="tabs-container">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#tab-vehicle">Thông tin xe</a></li>
            <li class=""><a data-toggle="tab" href="#tab-booking">Thông tin đặt xe</a></li>
        </ul>
        <div class="tab-content">
            <div id="tab-vehicle" class="tab-pane active">
                <div class="panel-body">
                    <div class="ibox ibox-content float-e-margins">
                        <button data-toggle="modal" data-target="#customModal" data-action="createVehicle" class="btn btn-success pull-right" style="margin-bottom: 1em;">
                            <i class="fa fa-plus"></i> Thêm xe mới
                        </button>
                        <table class="table table-striped table-bordered table-hover" width="100%" id="vehicles"></table>
                    </div>
                </div>
            </div>
            <div id="tab-booking" class="tab-pane">
                <div class="panel-body">
                    <div class="ibox ibox-content float-e-margins">
                        <table class="table table-striped table-bordered table-hover" width="100%" id="bookings"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{ BundleTable.Bundles.Add(new StyleBundle("~/Styles/Garage")
                                .Include("~/Content/awesome-bootstrap-checkbox.css",
                                    "~/Content/chosen.css",
                                    "~/Content/Datatable/css/jquery.dataTables.css",
                                    "~/Content/Datatable/css/dataTables.bootstrap.css",
                                    "~/Content/jasny-bootstrap.min.css",
                                    "~/Content/jsTree/themes/default/style.min.css",
                                    "~/Scripts/dropzone/basic.css",
                                    "~/Scripts/dropzone/dropzone.css"));
}
@section Styles {
    @Styles.Render("~/Styles/Garage")
}
@section PageStyle {
    @Styles.Render("~/Content/pageStyle/garage.css")
}

@{ BundleTable.Bundles.Add(new ScriptBundle("~/Scripts/Garage")
                  .Include("~/Scripts/chosen.jquery.js",
                      "~/Scripts/Datatables/jquery.dataTables.js",
                      "~/Scripts/Datatables/dataTables.bootstrap.js",
                      "~/Scripts/dropzone/dropzone.js",
                      "~/Scripts/jasny-bootstrap.min.js",
                      "~/Scripts/jsTree3/jstree.min.js",
                      "~/Scripts/utils/generateUIElements.js",
                      "~/Scripts/utils/generateCustomDataTablesFilters.js",
                      "~/Scripts/pageScript/garage.js"));
}
@section Scripts {
    @Scripts.Render("~/Scripts/Garage")
}